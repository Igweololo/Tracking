        <div class=" w3-bar-block w3-text-gray  w3-light-grey w3-padding-64 col-lg-4 col-md-4 col-sm-12 hidden-xs" style="width:25%">
            <a href="@Url.Action("Services","Service")" class="w3-bar-item w3-button w3-border-bottom w3-hover-blue">SERVICES</a>
